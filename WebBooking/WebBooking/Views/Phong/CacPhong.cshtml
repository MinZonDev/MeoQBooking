@model PagedList.IPagedList<WebBooking.Models.DB.Room>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="gdlr-header-substitute">
</div>
<div class="gdlr-page-title-wrapper">
    <div class="gdlr-page-title-overlay"></div>
    <div class="gdlr-page-title-container container">
        <h1 class="gdlr-page-title">Tất Cả Phòng</h1>
        <span class="gdlr-page-caption">Trang Các Phòng</span>
    </div>
</div>
<!-- is search -->
<div class="content-wrapper">
    <div class="gdlr-content">
        <!-- Above Sidebar Section-->
        <!-- Sidebar With Content Section-->
        <div class="with-sidebar-wrapper">
            <section id="content-section-1">
                <div class="section-container container">
                    <div class="room-item-wrapper type-classic" style="margin-bottom: 30px;">
                        <div class="room-item-holder ">
                            <div class="clear"></div>
                            @foreach (var item in Model)
                            {
                                <div class="four columns">
                                    <div class="gdlr-item gdlr-room-item gdlr-classic-room">
                                        <div class="gdlr-ux gdlr-classic-room-ux">
                                            <div class="gdlr-room-thumbnail">
                                                @*<a href="#"><img src="~/Content/assets/images/hotels/StandardTwinRoomWithSofa/room1.jpg" alt="" width="700" height="400"></a>*@
                                                <a href="@Url.Action("ChiTietPhong", "Phong", new { @id = item.roomid },null)"><img style="width:700px; height:300px" src="@item.image" alt=""></a>
                                            </div>
                                            <h3 style="font-size:30px" class="gdlr-room-title"><a href="@Url.Action("ChiTietPhong", "Phong", new { @id = item.roomid },null)">@item.roomname</a></h3>
                                            <div style="color:white" class="gdlr-hotel-room-info">
                                                <div style="font-size: 18px" class="gdlr-room-info"><i class="fa fa-check-square-o icon-check"></i><span class="gdlr-head">Giường</span><span class="gdlr-tail">@item.bed</span></div>
                                                <div style="font-size: 18px" class="gdlr-room-info"><i class="fa fa-check-square-o icon-check"></i><span class="gdlr-head">Số lượng người</span><span class="gdlr-tail">@item.maxpeople</span></div>
                                                <div style="font-size: 18px" class="gdlr-room-info"><i class="fa fa-check-square-o icon-check"></i><span class="gdlr-head">Cảnh</span><span class="gdlr-tail">@item.view</span></div>
                                                <div style="font-size: 18px" class="gdlr-room-info"><i class="fa fa-check-square-o icon-check"></i><span class="gdlr-head">Wifi</span><span class="gdlr-tail">Có</span></div>
                                                <div style="font-size: 25px; color: #b89f80" class="gdlr-room-category-item"><i class="fa fa-dollar"></i><span class="gdlr-head">Giá: </span><span class="gdlr-tail">@String.Format("{0:0,0}", item.price) VND/Đêm</span></div>
                                                <div class="clear"></div>
                                            </div><a class="gdlr-button with-border" href="@Url.Action("ChiTietPhong", "Phong", new { @id = item.roomid },null)">Chi Tiết Phòng<i class="fa fa-long-arrow-right icon-long-arrow-right"></i></a>
                                            <a class="gdlr-button with-border" href="@Url.Action("DatPhong", "DatPhong", new { @id = item.roomid },null)">Đặt Phòng<i class="fa fa-long-arrow-right icon-long-arrow-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="clear"></div>
                        </div>
                        <div class="gdlr-pagination">
                            <style>
                                .pagination > .active > a,
                                .pagination > .active > span,
                                .pagination > .active > a:hover,
                                .pagination > .active > span:hover,
                                .pagination > .active > a:focus,
                                .pagination > .active > span:focus {
                                    z-index: 2;
                                    color: #ffffff;
                                    cursor: default;
                                    background-color: #b89f80;
                                    border-color: #b89f80;
                                }
                            </style>
                            <span aria-current='page' class='page-numbers current'>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount</span>
                            <div style="text-align: right; margin-left: 695px; color: aliceblue; border-color: #b89f80 " class="pagination-container">

                                @Html.PagedListPager(Model, page => Url.Action("CacPhong", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
                            </div>

                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </section>
        </div>
        <!-- Below Sidebar Section-->
    </div>
    <!-- gdlr-content -->
    <div class="clear"></div>
</div>